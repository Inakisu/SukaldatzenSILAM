<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.stirling.sukaldatzensilam.Views.SignupActivity"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:layout_weight="9.25"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">


        <ImageView
            android:id="@id/logo"
            android:layout_width="@dimen/logo_w_h"
            android:layout_height="@dimen/logo_w_h"
            android:layout_above="@id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:src="@mipmap/ic_launcher_iconolla_foreground" />

<!--        <android.support.design.widget.TextInputLayout-->
<!--            android:id="@+id/mailContainer"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@id/logo"-->
<!--            android:layout_marginTop="15dp"-->
<!--            app:hintTextAppearance="@style/WhiteText">-->

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/password"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

<!--        </android.support.design.widget.TextInputLayout>-->

<!--        <android.support.design.widget.TextInputLayout-->
<!--            android:id="@+id/passwordContainer"-->
<!--            android:layout_below="@id/mailContainer"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:hintTextAppearance="@style/WhiteText">-->

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/nombreReg"
            android:focusableInTouchMode="true"
            android:hint="@string/hint_password"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

<!--        </android.support.design.widget.TextInputLayout>-->

<!--        <android.support.design.widget.TextInputLayout-->
<!--            android:id="@+id/nombreContainer"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@id/passwordContainer"-->
<!--            app:hintAnimationEnabled="false"-->
<!--            app:hintTextAppearance="@style/WhiteText">-->

        <EditText
            android:id="@+id/nombreReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/fechaNacReg"
            android:focusableInTouchMode="true"
            android:hint="Nombre"
            android:imeOptions="actionUnspecified"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

<!--        </android.support.design.widget.TextInputLayout>-->

<!--        <android.support.design.widget.TextInputLayout-->
<!--            android:id="@+id/fechaNacContainer"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@id/nombreContainer"-->
<!--            app:hintAnimationEnabled="true"-->
<!--            app:hintTextAppearance="@style/WhiteText">-->

        <!--        </android.support.design.widget.TextInputLayout>-->

        <EditText
            android:id="@+id/fechaNacReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sign_up_button"
            android:layout_marginBottom="28dp"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:hint="Fecha de nacimiento"
            android:imeOptions="actionUnspecified"
            android:inputType="date"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <Button
            android:id="@+id/sign_up_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:background="@color/colorAccent"
            android:text="Registrarse"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </RelativeLayout>

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dip"
        android:layout_weight="0.75"
        android:background="#55000000"
        android:text="¿Ya está registrado? Inicie sesión"
        android:textAllCaps="false"
        android:textColor="#ffffffff"
        android:textSize="15dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />
</LinearLayout>
